{% extends 'base.html.twig' %}

{% block title %}Nouveau Ticket{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-white">Créer un nouveau ticket</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            <div class="card bg-dark text-white border-secondary">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.titre) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.categorie) }}
                        </div>
                    </div>
                    
                    <div class="row mt-3">
                        <div class="col-md-12">
                            {{ form_row(form.description) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            {{ form_row(form.priorite) }}
                        </div>
                    </div>

                    <div class="card mt-4 bg-secondary bg-opacity-25 border-secondary">
                        <div class="card-header border-secondary">
                            <h5 class="card-title mb-0 text-white">Commentaire initial (optionnel)</h5>
                        </div>
                        <div class="card-body">
                            {{ form_row(form.commentaireInitial) }}
                            {{ form_row(form.pieceJointe) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save text-white"></i> Créer le ticket
                </button>
                <a href="{{ path('app_profile_tickets') }}" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left text-white"></i> Retour à la liste
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
