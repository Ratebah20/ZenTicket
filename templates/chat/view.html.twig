{% extends 'base.html.twig' %}

{% block title %}Chat - {{ chatbox.ticket.titre }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .chat-container {
            height: calc(100vh - 150px);
            display: flex;
            flex-direction: column;
        }
        .messages-container {
            flex-grow: 1;
            overflow-y: auto;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
        }
        .message {
            margin-bottom: 1rem;
            padding: 0.75rem;
            border-radius: 0.5rem;
            max-width: 80%;
        }
        .message.sent {
            background: #007bff;
            color: white;
            margin-left: auto;
        }
        .message.received {
            background: white;
            border: 1px solid #dee2e6;
            margin-right: auto;
        }
        .message.ai {
            background: #6f42c1;
            color: white;
            margin-right: auto;
        }
        .message-input {
            display: flex;
            gap: 1rem;
            padding: 1rem;
            background: white;
            border-top: 1px solid #dee2e6;
        }
        .reactions {
            display: flex;
            gap: 0.5rem;
            margin-top: 0.5rem;
        }
        .reaction {
            background: rgba(0,0,0,0.1);
            padding: 0.25rem 0.5rem;
            border-radius: 1rem;
            font-size: 0.875rem;
            cursor: pointer;
        }
        .typing-indicator {
            font-size: 0.875rem;
            color: #6c757d;
            margin-bottom: 0.5rem;
            font-style: italic;
        }
        .emoji-picker {
            position: absolute;
            bottom: 100%;
            right: 0;
            background: white;
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            padding: 0.5rem;
            display: none;
            z-index: 1000;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            min-width: 200px;
        }
        .emoji-grid {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 0.5rem;
            padding: 0.5rem;
        }
        .emoji-btn {
            font-size: 1.5rem;
            padding: 0.5rem;
            border: none;
            background: none;
            cursor: pointer;
            transition: transform 0.2s, background-color 0.2s;
            border-radius: 0.25rem;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }
        .emoji-btn:hover {
            transform: scale(1.1);
            background-color: #f8f9fa;
        }
        .emoji-btn:active {
            transform: scale(0.95);
        }
        .emoji-btn {
            font-size: 1.2rem;
            padding: 0.25rem 0.5rem;
            border: none;
            background: none;
            cursor: pointer;
            transition: transform 0.2s;
        }
        .emoji-btn:hover {
            transform: scale(1.2);
        }
        .message-meta {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-top: 0.25rem;
            font-size: 0.75rem;
        }
        .read-status {
            color: #28a745;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="chat-container">
                    <h3 class="mb-4">
                        Chat - {{ chatbox.ticket.titre }}
                        <small class="text-muted">#{{ chatbox.ticket.id }}</small>
                    </h3>

                    <div class="messages-container" id="messages">
                        <div class="typing-indicator" style="display: none;">
                            <span class="typing-text"></span>
                        </div>
                    </div>

                    <div class="message-input">
                        <div class="flex-grow-1 position-relative">
                            <textarea 
                                class="form-control" 
                                id="messageInput" 
                                rows="2" 
                                placeholder="Écrivez votre message..."
                            ></textarea>
                            <div class="emoji-picker" id="emojiPicker"></div>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-secondary" id="emojiButton">
                                <i class="fas fa-smile"></i>
                            </button>
                            <button class="btn btn-primary" id="sendButton" type="button">
                                <i class="fas fa-paper-plane"></i> Envoyer
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/chat.js') }}"></script>
    <script>
        // Configuration pour le chat
        window.CHAT_CONFIG = {
            id: {{ chatbox.id }},
            userId: {{ app.user.id }},
            mercureUrl: "{{ mercureUrl }}",
            subscriberToken: "{{ subscriberToken }}",
            csrfToken: "{{ csrf_token('chat') }}",
            routes: {
                messages: "{{ path('chat_messages', {id: chatbox.id}) }}",
                send: "{{ path('chat_send', {id: chatbox.id}) }}",
                typing: "{{ path('chat_typing', {id: chatbox.id}) }}"
            }
        };

        // Initialiser le chat quand jQuery est prêt
        $(document).ready(function() {
            console.log('jQuery version:', $.fn.jquery);
            console.log('DOM ready, chat.js loaded:', typeof Chat !== 'undefined');
            console.log('Chat config:', window.CHAT_CONFIG);
            
            if (typeof Chat === 'undefined') {
                console.error('Error: Chat class not found. Make sure chat.js is loaded correctly.');
                return;
            }

            try {
                window.chatInstance = new Chat(window.CHAT_CONFIG);
            } catch (error) {
                console.error('Error initializing chat:', error);
            }
        });
    </script>
{% endblock %}
