{% extends 'base.html.twig' %}

{% block title %}Liste des administrateurs{% endblock %}

{% block body %}
<div class="container mt-4 bg-dark">
    <h1 class="text-white">Liste des administrateurs</h1>

    <div class="card bg-dark text-white border-secondary mb-4">
        <div class="card-body">
            <table class="table table-dark table-hover border-secondary">
        <thead>
            <tr>
                <th class="text-white">ID</th>
                <th class="text-white">Nom</th>
                <th class="text-white">Email</th>
                <th class="text-white">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for admin in admins %}
            <tr>
                <td>{{ admin.id }}</td>
                <td>{{ admin.nom }}</td>
                <td>{{ admin.email }}</td>
                <td>
                    {# Ajouter ici les actions possibles #}
                </td>
            </tr>
            {% endfor %}
        </tbody>
            </table>
        </div>
    </div>

    <a href="{{ path('admin_create_admin') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter un administrateur
    </a>
</div>
{% endblock %}
