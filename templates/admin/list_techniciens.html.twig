{% extends 'base.html.twig' %}

{% block title %}Liste des Techniciens{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-white mb-4">Liste des Techniciens</h1>
        
        <div class="card bg-dark text-white border-secondary">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for technicien in techniciens %}
                                <tr>
                                    <td>{{ technicien.nom }}</td>
                                    <td>{{ technicien.email }}</td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-info"><i class="fas fa-edit"></i> Modifier</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="mt-3">
            <a href="{{ path('admin_create_technicien') }}" class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter un technicien</a>
            <a href="{{ path('app_home') }}" class="btn btn-outline-light ms-2"><i class="fas fa-arrow-left"></i> Retour</a>
        </div>
    </div>
{% endblock %}
