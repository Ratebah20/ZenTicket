<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Bienvenue!{% endblock %} - ZenTicket</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_home') }}">
                    <i class="fas fa-ticket-alt me-2"></i>ZenTicket
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_home') }}">
                                <i class="fas fa-home me-1"></i>Accueil
                            </a>
                        </li>
                        {% if is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') and not is_granted('ROLE_TECHNICIEN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_ticket_new') }}">
                                    <i class="fas fa-plus-circle me-1"></i>Nouveau Ticket
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_profile_tickets') }}">
                                    <i class="fas fa-ticket-alt me-1"></i>Mes Tickets
                                </a>
                            </li>
                        {% endif %}
                        {% if is_granted('ROLE_TECHNICIEN') %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="techDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-tools me-1"></i>Espace Technicien
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="{{ path('technicien_dashboard') }}">
                                            <i class="fas fa-tachometer-alt me-1"></i>Tableau de bord
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('app_rapport_index') }}">
                                            <i class="fas fa-file-alt me-1"></i>Rapports
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('app_rapport_intervention_new') }}">
                                            <i class="fas fa-plus me-1"></i>Nouveau rapport d'intervention
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-cog me-1"></i>Administration
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="{{ path('admin_dashboard') }}">
                                            <i class="fas fa-tachometer-alt me-1"></i>Tableau de bord
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('admin_technicien_new') }}">
                                            <i class="fas fa-user-plus me-1"></i>Nouveau technicien
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('app_rapport_index') }}">
                                            <i class="fas fa-file-alt me-1"></i>Rapports
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('app_rapport_statistique_new') }}">
                                            <i class="fas fa-chart-bar me-1"></i>Nouveau rapport statistique
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        {% endif %}
                    </ul>
                    <ul class="navbar-nav">
                        {% if app.user %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user me-1"></i>{{ app.user.nom }}
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') or is_granted('ROLE_TECHNICIEN') %}
                                        <li>
                                            <a class="dropdown-item" href="{{ path('app_profile_index') }}">
                                                <i class="fas fa-user-circle me-1"></i>Mon Profil
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('app_profile_change_password') }}">
                                                <i class="fas fa-key me-1"></i>Changer le mot de passe
                                            </a>
                                        </li>
                                    {% endif %}
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('app_logout') }}">
                                            <i class="fas fa-sign-out-alt me-1"></i>Déconnexion
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">
                                    <i class="fas fa-sign-in-alt me-1"></i>Connexion
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}">
                                    <i class="fas fa-user-plus me-1"></i>Inscription
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <div class="main-content">
            <div class="container">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}{% endblock %}
            </div>
        </div>

        <!--
        pour react
        <div id="root"></div>
        {{ encore_entry_script_tags('react-app') }}
        -->

        <footer>
            <div class="container">
                <p>&copy; {{ "now"|date("Y") }} ZenTicket. Tous droits réservés.</p>
            </div>
        </footer>

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        {% endblock %}
    </body>
</html>