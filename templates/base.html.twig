<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="csrf-token" content="{{ csrf_token('') }}">
        <title>{% block title %}Bienvenue!{% endblock %} - ZenTicket</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('global') }}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
        {% endblock %}
    </head>
    <body class="dark-theme">
        <div class="app-wrapper">
            <!-- Sidebar -->
            {% include '_partials/_sidebar.html.twig' %}
            
            <div class="main-wrapper">
                <!-- Navbar -->
                {% include '_partials/_navbar.html.twig' %}
                
                <!-- Main Content -->
                <main class="main-content">
                    <div class="page-content">
                        <!-- Flash Messages -->
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }} alert-dismissible fade show animate__animated animate__fadeIn">
                                    {% if label == 'success' %}
                                        <i class="fas fa-check-circle me-2"></i>
                                    {% elseif label == 'danger' or label == 'error' %}
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                    {% elseif label == 'warning' %}
                                        <i class="fas fa-exclamation-circle me-2"></i>
                                    {% else %}
                                        <i class="fas fa-info-circle me-2"></i>
                                    {% endif %}
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            {% endfor %}
                        {% endfor %}
                        
                        <!-- Page Content -->
                        {% block body %}{% endblock %}
                    </div>
                </main>
                
                <!-- Footer -->
                <footer class="footer">
                    <div class="container-fluid">
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="mb-0">&copy; {{ "now"|date("Y") }} ZenTicket. Tous droits réservés.</p>
                            <div class="footer-links">
                                <a href="#">Confidentialité</a>
                                <a href="#">Conditions</a>
                                <a href="#">Support</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
            {{ encore_entry_script_tags('app') }}
            {% block page_scripts %}{% endblock %}
        {% endblock %}
    </body>
</html>